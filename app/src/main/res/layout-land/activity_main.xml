<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/upper_bg"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:background="@color/bg2">


        <TextView
            android:id="@+id/textEnter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textSize="24sp"
            android:layout_marginTop="10sp"
            android:layout_marginStart="40sp"
            android:text="Добро пожаловать"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/textHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textSize="16sp"
            android:layout_marginTop="40sp"
            android:layout_marginStart="40sp"
            android:text="Личный кабинет"
            android:textColor="@color/bg" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_box"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:layout_below="@id/upper_bg"
        android:background="@color/white"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="-50sp">

        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="70sp"
            android:layout_marginTop="-10sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/Im_begemot"
            android:textSize="17sp"
            android:layout_marginTop="4sp"
            android:layout_toStartOf="@id/checkbox1"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50sp"
            android:layout_marginTop="25sp"
            android:backgroundTint="@color/purple_700"
            android:onClick="goSecond"
            android:text="Войти" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_box"
        android:layout_above="@id/downpg">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@drawable/begemot"
            android:src="@drawable/begemot"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/downpg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@color/bg2"
        android:orientation="horizontal">

        <Button
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="45sp"
            android:backgroundTint="@color/purple_700"
            android:text="Главная" />

        <Button
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="45sp"
            android:backgroundTint="@color/purple_700"

            android:onClick="goContacts"
            android:text="Контакты" />

        <Button
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="45sp"
            android:backgroundTint="@color/purple_700"
            android:onClick="goBlog"
            android:text="Блог"
            android:layout_alignParentEnd="true"
            />
    </LinearLayout>

</RelativeLayout>